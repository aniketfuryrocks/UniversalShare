<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:fillViewport="true"
            android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <ImageButton
                android:id="@+id/infoBackBt"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="40dp"
                android:background="@color/transparent"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/back"/>

        <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp"
                android:background="@drawable/card"
                android:orientation="vertical"
                android:padding="30dp">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Universal Share"
                    android:textSize="45dp"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="@string/about"
                    android:textSize="20dp"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Support us at"
                    android:textSize="30dp"/>

            <LinearLayout
                    android:id="@+id/infoWeb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@color/black"
                    android:gravity="center_vertical"
                    android:padding="10dp">

                <ImageView
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        app:srcCompat="@drawable/eadded_logo"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="eadded.com/donations"
                        android:textColor="#ffffff"
                        android:textSize="20dp"/>
            </LinearLayout>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Follow us on"
                    android:textSize="30dp"/>

            <LinearLayout
                    android:id="@+id/infoInsta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@color/black"
                    android:gravity="center_vertical"
                    android:padding="10dp">

                <ImageView
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        app:srcCompat="@drawable/instagram"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="instagram.com/eaddedofficial"
                        android:textColor="#ffffff"
                        android:textSize="20dp"/>
            </LinearLayout>


            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Mail us at"
                    android:textSize="30dp"/>

            <LinearLayout
                    android:id="@+id/infoEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@color/black"
                    android:gravity="center_vertical"
                    android:padding="10dp">

                <ImageView
                        android:layout_width="40dp"
                        android:layout_height="25dp"
                        android:layout_margin="10dp"
                        app:srcCompat="@drawable/email"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="support@eadded.com"
                        android:textColor="#ffffff"
                        android:textSize="20dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>