<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="right"
              android:paddingRight="15dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:app="http://schemas.android.com/apk/res-auto"
                  android:layout_width="265dp"
                  android:layout_height="110dp"
                  android:background="@drawable/black_card"
                  android:gravity="center"
                  android:padding="15dp">

        <com.mikhaellopez.circularprogressbar.CircularProgressBar
                android:id="@+id/FileExpStorageProg"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                app:cpb_background_progressbar_color="#ffff"
                app:cpb_background_progressbar_width="5dp"
                app:cpb_progress="20"
                app:cpb_progress_max="100"
                app:cpb_progressbar_color="@color/colorPrimaryDark"
                app:cpb_progressbar_width="10dp"/>

        <LinearLayout
                android:layout_width="145dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/FileExpStorageTitleTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:text="Device Storage"
                    android:textColor="#ffffff"
                    android:textSize="20dp"/>

            <TextView
                    android:id="@+id/FileExpStorageSizeTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20GB of 100GB"
                    android:textColor="#ffffff"
                    android:textSize="16dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
